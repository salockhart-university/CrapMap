<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.34">

        <RatingBar
            android:id="@+id/rating_average_accessibility"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryLight"
            android:isIndicator="false"
            android:numStars="5"
            android:rating="3"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.877"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.117"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1" />

        <RatingBar
            android:id="@+id/rating_average_availability"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryLight"
            android:isIndicator="false"
            android:numStars="5"
            android:rating="3"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.877"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.21"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1" />

        <RatingBar
            android:id="@+id/rating_average_cleanliness"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryLight"
            android:isIndicator="false"
            android:numStars="5"
            android:rating="3"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.877"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.303"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1" />

        <TextView
            android:id="@+id/text_cleanliness"
            android:layout_width="152dp"
            android:layout_height="19dp"
            android:text="Cleanliness::"
            android:textAlignment="textEnd"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="152dp" />

        <TextView
            android:id="@+id/text_availability"
            android:layout_width="152dp"
            android:layout_height="19dp"
            android:text="Availability:"
            android:textAlignment="textEnd"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="108dp" />

        <TextView
            android:id="@+id/text_accessibility"
            android:layout_width="152dp"
            android:layout_height="19dp"
            android:text="Accessibility:"
            android:textAlignment="textEnd"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="64dp" />

        <TextView
            android:id="@+id/text_bathroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bathroom_name"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="126dp"
            tools:layout_editor_absoluteY="16dp" />

        <Button
            android:id="@+id/button2"
            style="@android:style/Widget.Material.Light.Button.Inset"
            android:layout_width="79dp"
            android:layout_height="65dp"
            android:elevation="7dp"
            android:text="+"
            android:textSize="30sp"
            android:visibility="visible"
            tools:layout_editor_absoluteX="289dp"
            tools:layout_editor_absoluteY="430dp" />

        <ListView
            android:id="@+id/review_listView"
            android:layout_width="358dp"
            android:layout_height="314dp"
            tools:layout_editor_absoluteX="13dp"
            tools:layout_editor_absoluteY="188dp" />

    </android.support.constraint.ConstraintLayout>
</LinearLayout>

